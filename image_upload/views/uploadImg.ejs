<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- bootstrap 5 css cdn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>upload img | <%= title %></title>
    <!-- custom stylesheet -->
    <style>
      #imgError.active {
        color: red;
      }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <h1 class="heading text-center mt-3">Image Upload API</h1>
                <form action="/api/v1/components/img-upload" method="POST" enctype="multipart/form-data" id="img-form" class="mt-5">
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">upload your profile picture</label>
                      <input type="file" name="img" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                      <div id="imgError" class="form-text"></div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <!-- bootstrap 5 js cdn -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
    <script>
      const form = document.querySelector('#img-form');
      const image = document.querySelector('#exampleInputEmail1'); 
      const imageError = document.querySelector('#imgError');

      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        if (!image.files[0]) {
          imageError.textContent = 'Please select an image file';
          imageError.classList.add('active');
          image.style.border = '1px solid red';
        }

        // when sending img file data from client to server we use formData 
        const formData = new FormData();
        // first args is the name attribute of the img input tag & second is the file as value
        formData.append('image', image.files[0]);

        try {
          const response = await fetch('/api/v1/components/img-upload', {
            method: 'POST',
            body: formData,
          });

          console.log('for debugging: ', response);

          const { success, details } = await response.json();
          
          if (success === true) {
            alert(details);
          } 

        } catch (err) {
          console.log(err);
        }
      })

    </script>
</body>
</html>