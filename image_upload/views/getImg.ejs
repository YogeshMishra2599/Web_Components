<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>get img | <%= title %>
    </title>
    <!-- bootstrap 5 css cdn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>upload img | <%= title %>
    </title>
    <!-- custom stylesheet -->
    <style>
        #imgError.active {
            color: red;
        }

        #show-img {
            max-width: 100%;        
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <h1 class="heading text-center mt-3">Display Uploaded Image</h1>
                <div class="mt-5">
                    <label for="exampleInputEmail1" class="form-label">specify the id of the image that you want to display</label>
                    <div class="d-flex">
                        <input type="number" name="img" class="form-control me-3" id="exampleInputImgId"
                        aria-describedby="emailHelp" placeholder="Enter your image_id">
                        <button type="button" class="btn btn-primary" id="submitBtn">Submit</button>
                    </div>
                    <div id="imgError" class="form-text"></div>
                    <div class="mt-3">
                        <a class="text-decoration-none" href="/uploads">Go to upload images</a>
                    </div>
                </div>
                <img id="show-img" class="mt-3">
            </div>
        </div>
    </div>

    <!-- bootstrap 5 js cdn -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

    <!-- custom script -->
    <script>
        const imgIdInput = document.querySelector('#exampleInputImgId');
        const submitBtn = document.querySelector('#submitBtn');
        const showImg = document.querySelector('#show-img');
        const imgError = document.querySelector('#imgError');

        submitBtn.addEventListener('click', async (e) => {
            e.preventDefault();

            const imgId = imgIdInput.value;
            
            if (!imgId) {
                imgError.textContent = 'Input field cannot be empty';
                imgError.classList.add('active');
            }

            try {
                const response = await fetch(`api/v1/components/get-img/${imgId}`);
                
                if (response.ok === false) {
                    const data = await response.json();
                    if (data.success === false) {
                        imgError.textContent = data.details;
                        imgError.classList.add('active');
                    }
                } else if (response.ok === true) {
                    showImg.setAttribute('src', response.url);
                    imgError.textContent = '';
                } 

            } catch (err) {
                console.log('for debugging:', err);
            }
        })
    </script>
</body>

</html>